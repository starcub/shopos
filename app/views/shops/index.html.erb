<h1>Listing shops</h1>

<table>
  <tr>
    <th>Posname</th>
    <th>Realname</th>
    <th>Phone</th>
    <th>Address</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shops.each do |shop| %>
  <tr>
    <td><%= shop.posname %></td>
    <td><%= shop.realname %></td>
    <td><%= shop.phone %></td>
    <td><%= shop.address %></td>
    <td><%= shop.category.name %></td>
    <td><%= link_to 'Show', shop %></td>
    <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
    <td><%= link_to 'Destroy', shop, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

